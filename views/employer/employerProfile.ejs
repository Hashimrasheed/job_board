<%- include('../partials/employerHeader.ejs') %>
<%- include('../partials/employernav.ejs') %>


<div class="app-main__outer">
    <div class="app-main__inner">

        <div class="page-content bg-white">
    
            <!-- contact area -->
        
            <div class="container">
                <div class="main-body">
                
                
                      <div class="row gutters-sm">
                        <div class="col-md-4 mb-3">
                          <div class="card">
                            <div class="card-body">
                              <div class="d-flex flex-column align-items-center text-center">
                                <img src="/images/brandLogo/<%= employer._id %>.png" alt="Admin" class="rounded-circle" width="150">
                                
                                <div class="mt-3">

                                    <p class="text-secondary mb-1" style="font-weight: bold;"></p>
                                  <p class="text-muted font-size-sm"></p>
                                  <!-- <button class="btn btn-primary">Follow</button> -->
                                  <form action="/employer/profileEdit">
                                    <button class="btn btn-outline-primary" type="submit">Edit Profile</button>
                                  </form>
                                </div>
                              </div>
                            </div>
                          </div>
        
                          <div class="card mt-3">
                            <ul class="list-group list-group-flush">
                                <div class="card">
                                    <div class="card-body">
                                     
                                    </div>
                                  </div>
                              
                            </ul>
                          </div>
                        </div>
                        <div class="col-md-8">
                          <div class="card mb-3">
                            <div class="card-body">
                              <div class="row">
                                <div class="col-sm-3">
                                  <h6 class="mb-0">Full Name</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                  <%= employer.username %>
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <div class="col-sm-3">
                                  <h6 class="mb-0">Email</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= employer.email %>
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <div class="col-sm-3">
                                  <h6 class="mb-0">Professional Title</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= employer.professionalTitle %>
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <div class="col-sm-3">
                                  <h6 class="mb-0">About Company</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= employer.aboutCompany %>
                                </div>
                              </div>
                              <hr>
                              <div class="row">
                                <div class="col-sm-3">
                                  <h6 class="mb-0">Address</h6>
                                </div>
                                <div class="col-sm-9 text-secondary">
                                    <%= employer.location %>
                                </div>
                              </div>
                              
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                </div>
        
        
            
        </div>
    </div>
</div>





<%- include('../partials/employerFooter.ejs') %>