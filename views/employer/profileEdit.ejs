<%- include('../partials/employerHeader.ejs') %>
<%- include('../partials/employernav.ejs') %>


<div class="app-main__outer">
    <div class="app-main__inner">

<link href="https://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css" rel="stylesheet">
<div class="container">
<div class="row flex-lg-nowrap">
  <div class="col-12 col-lg-auto mb-3" style="width: 200px;">
    
  </div>

        <div class="col pt-3">
            <div class="row">
            <div class="col mb-3">
                <div class="card ">
                <div class="card-body">
                    <div class="e-profile">
                    <form action="/employer/editprofile" method="POST" enctype="multipart/form-data">

                    <div class="row ">
                        <div class="col-12 col-sm-auto mb-3">
                        <div class="mx-auto" style="width: 140px;">
                            <div class="d-flex justify-content-center align-items-center rounded" style="height: 140px; background-color: rgb(233, 236, 239);">
                                <span style="color: rgb(166, 168, 170); font: bold 8pt Arial;"><img id="blah" src="/images/brandLogo/<%= employer._id %>.png" alt=""></span>
                            
                            </div>
                        </div>
                        </div>

                        <div class="col d-flex flex-column flex-sm-row justify-content-between mb-3">
                        <div class="text-center text-sm-left mb-2 mb-sm-0">
                            <h4 class="pt-sm-2 pb-1 mb-0 text-nowrap"><%= employer.username %></h4>
                            <div class="mt-2">
                            <button class="btn btn-primary" type="button">
                                <i class="fa fa-fw fa-camera"></i>
                                <span><input type="file" name="logo" onchange="readURL(this);">Change Logo</button></span>
                            </button>
                            </div>
                        </div>
                        </div>
                    </div>
                    <ul class="nav nav-tabs">
                        <li class="nav-item"><a href="" class="active nav-link">Employer Information</a></li>
                    </ul>
                    <div class="tab-content pt-3">
                        <div class="tab-pane active">
                            <div class="row">
                            <div class="col">
                               
                                <div class="row">
                                    <div class="col">
                                    <div class="form-group">
                                        <label>Company Title</label>
                                        <input class="form-control" name="username" value="<%= employer.username %>" placeholder="Company Title" type="text" required>
                                    </div>
                                    </div>
                                </div>
                                <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                    <label>Email</label>
                                    <input class="form-control" name="email" value="<%= employer.email %>" placeholder="Email" type="email" required>
                                    </div>
                                </div>
                                </div>

                                <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                    <label>Professional Title</label>
                                    <input class="form-control" name="professionalTitle" value="<%= employer.professionalTitle %>" placeholder="Professional Title" type="text" required>
                                    </div>
                                </div>
                                </div>

                                <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                    <label>About Company</label>
                                    <textarea class="form-control" name="aboutCompany" id="" cols="30" rows="5" placeholder="About Company" required><%= employer.aboutCompany %></textarea>
                                    </div>
                                </div>
                                </div>
                    
                                <div class="row">
                                <div class="col">
                                    <div class="form-group">
                                    <label>Location</label>
                                    <input class="form-control" name="location" value="<%= employer.location %>" placeholder="Location" type="text" required>
                                    </div>
                                </div>
                                </div>

                            </div>
                            </div>
                            
                            <div class="row">
                            <div class="col d-flex justify-content-end">
                                <input type="hidden" name="id" value="<%= employer._id %>" id="">
                                <input class="btn btn-default pr-3" style="margin-right: 2rem;" value="Cancel" type="reset">
                                <button class="btn btn-primary pr-3" type="submit">Save Changes</button>
                            </div>
                            </div>

                        </div>
                    </div>
                    </form>
                    </div>
                </div>
                </div>
            </div>

            <div class="col-12 col-md-3 mb-3">
                
                
            </div>
            </div>

        </div>
        </div>
        </div>
    </div>
</div>

<script>

  function readURL(input) {
        if (input.files && input.files[0]) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $('#blah')
                    .attr('src', e.target.result)
                    
            };

            reader.readAsDataURL(input.files[0]);
        }
    }
</script>

<%- include('../partials/employerFooter.ejs') %>