<%- include('../partials/adminHeader.ejs') %>

<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="wrapper">
            <div class="content">
              <h2>Messages</h2>
              <% msg.forEach((msg) => { %>
              <div class="">
                <img width="40" style="float: left;" class="rounded-circle" src="<%= msg.pic %>" /><p style="padding-left: 3rem;"><%= msg.name %> <br> <%= msg.email %></p>
                <p class="message" style="background-color: white;"><%= msg.message %></p>
              </div>
               <% }) %>
            </div>
          </div>
    </div>
</div>


<style>
    @import url(https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400);



*{
  margin: 0;
  padding: 0;
  font-family: Source Sans Pro;
  font-weight: 200;
  -webkit-font-smoothing: subpixel-antialiased;
  -webkit-backface-visibility: hidden;
}
body{
  background: #fff;  
}
h2{
    padding-top: 1rem;
    padding-bottom: 1rem;
  margin: 30px 0 40px 0;
  font-size: 2.9em;
  text-align: center;
  background: #138496;
  color: #fff;
  border-radius: 5px;
}
.wrap {
  width: 550px;
  margin: 50px auto;
}

.content{
  width: 500px;
  height: 600px;
  position: relative;
  margin: 0 auto;
}

.mail {
  margin: 30px 0;
  width: 500px;
  height: 80px;
  /* background: ; */
  border-radius: 100px;
  z-index: 100px;
  overflow: hidden;
}

.message {
    font-size: 1.0em;
    width: 410px;
    padding: 9px 0;
  }

.img {
  margin: 0 10px 0 0;
  float:left;
  height: 80px;
  border-radius: 100px;
}

.delete {
  color: #000;
  position: absolute;
  height: 30px;
  width: 50px;
  border-radius: 100px;
  background-color: #fff;
  cursor: pointer;
  margin: 25px 0 0 450px;
  z-index: 200;
  
  -webkit-transition: all 0.2s;
}
  .delete p {
    font-size: 0.7em;
    padding: 8px 7px;
  }

.delete:hover {
  background-color: #FF988E;
  color: #fff;
  
  -webkit-transition: all 0.2s;
}
</style>

<script>
    $('.delete').click(function(){
  $(this).transition({"margin-left": "470px",
                      "color": "#fff",
                      "background": "#FF988E"}, 200, function(){
                        $(this).transition({"margin-left": "390px"}, 60, function(){ 
                          $(this).parent().transition({"margin-left": "-150%", "opacity": "0"}, 500, function(){
                          $(this).transition({"height": "0px", "margin": "-15px 0"}, 400, function(){
                            $(this).hide();
                            });
                          });
                        });
                      });
});
</script>

