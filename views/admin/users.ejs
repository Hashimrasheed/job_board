<%- include('../partials/adminHeader.ejs') %>

<div class="app-main__outer">
    <div class="app-main__inner">
        <div class="row">
            <div class="col-md-12">
                <div class="main-card mb-3 card">
                    <div class="card-header">All Users
                        
                    </div>
                    <div class="table-responsive">
                        <table class="align-middle mb-0 table table-borderless table-striped table-hover">
                            <thead>
                            <tr>
                                <th class="text-center">#</th>
                                <th class="pl-5">Name</th>
                                <th class="text-center">email</th>
                                <th class="text-center">phone</th>
                                <th class="text-center">Edit</th>
                                <th class="text-center">Block</th>
                            </tr>
                            </thead>
                            <tbody>
                                <% for(let i = 0; i < users.length; i++) { %>
                                    <tr>
                                        <td class="text-center text-muted"><%= [i+1] %></td>
                                        <td>
                                            <div class="widget-content p-0">
                                                <div class="widget-content-wrapper">
                                                    <div class="widget-content-left mr-3">
                                                        <div class="widget-content-left">
                                                            <img width="40" class="rounded-circle" src="<%= users[i].pic %>">
                                                        </div>
                                                    </div>
                                                    <div class="widget-content-left flex2">
                                                        <div class="widget-heading"><%= users[i].name %></div>
                                                        <!-- <div class="widget-subheading opacity-7">Web Developer</div> -->
                                                    </div>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="text-center"><%= users[i].email %></td>
                                        <td class="text-center"><%= users[i].mobile %></td>
                                        <form action="/admin/postuseredit" method="POST">
                                            <input type="hidden" name="id" value="<%= users[i]._id %>">
                                            <td class="text-center">
                                                <button type="submit" class="mr-2 btn-icon btn-icon-only btn btn-outline-primary"><i class="pe-7s-pen btn-icon-wrapper"> </i></button>
                                            </td>
                                        </form>
                                        
                                        <form action="/admin/userblock" method="POST">
                                            <input type="hidden" name="id" value="<%= users[i]._id %>">
                                            <td class="text-center">
                                                <button type="submit" class="mr-2 btn-icon btn-icon-only btn btn-outline-danger"><i class="fa fa-ban btn-icon-wrapper"> </i></button>
                                            </td>
                                        </form>
                                        
                                    </tr>
                                <%}%>
                            
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<%- include('../partials/adminFooter.ejs') %>