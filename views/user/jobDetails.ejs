<%- include('../partials/header.ejs') %>
<%- include('../partials/usernav.ejs') %>


<div class="page-content bg-white">
    
    <!-- contact area -->
    <div class="content-block">
        <!-- Job Detail -->
        <div class="section-full pt-2 mb-5">
            <div class="container">
                <% if(success.length > 0) { %>
                    <div class="alert alert-success alert-dismissible fade show text-center">
                        <strong><%= success %></strong>
                        <button type="button" id="closeAlert" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">X</span>
                        </button>
                        
                    </div>
                <% } %>
                <% if(error.length > 0) { %>
                    <div class="alert alert-danger alert-dismissible fade show text-center">
                        <strong><%= error %></strong>
                        <button type="button" id="closeAlert" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">X</span>
                        </button>
                    </div>
                <% } %>
                <div class="row">
                    <div class="col-lg-4">
                        <div class="sticky-top">
                            <div class="row">
                               
                                <div class="col-lg-12 col-md-6">
                                    <div class="m-b30" >
                                        <img src="/images/brandLogo/<%= job._id %>.png" style="max-width: 50%; margin-left: 5.5rem;" alt="">
                                        <h3 class="m-t0 m-b10 pt-2 ml-5 font-weight-700 title-head">
                                            <a href="#myModal" data-toggle="modal" class="text-secondry m-t30 m-l30 m-r30"><%= job.companyName %></a>
                                        </h3>
                                        <div class="pl-5">
                                            <a href="#myModal" style="margin-left: 3rem;" data-toggle="modal" class="site-button ml-5">View Profile</a>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-12 col-md-6">
                                    <div class="widget bg-white p-lr20 p-t20  widget_getintuch radius-sm">
                                        <h4 class="text-black font-weight-700 p-t10 m-b15">Job Details</h4>
                                        <ul>
                                            <li><i class="ti-location-pin"></i><strong class="font-weight-700 text-black">Address</strong><span class="text-black-light"> <%= job.location %> </span></li>
                                            <li><i class="fa fa-inr"></i><strong class="font-weight-700 text-black">Salary</strong> ₹<%= job.minimumSalary %> - ₹<%= job.maximumSalary %></li>
                                            <li><i class="ti-shield"></i><strong class="font-weight-700 text-black">Experience</strong><%= job.minExp %>-<%= job.maxExp %> yrs</li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-8">
                        <div class="job-info-box">
                            <h3 class="m-t0 m-b10 font-weight-700 title-head">
                                <a href="#" class="text-secondry m-r30"><%= job.header %></a>
                            </h3>
                            
                            <ul class="job-info">
                                <li><strong>Education</strong> <%= job.skills %></li>
                                <li><strong>Work Time:</strong> <%= job.workTime %></li>
                            </ul>
                            <ul class="job-info">
                                <li><i class="ti-location-pin text-black m-r5"></i> <%= job.location %> </li>
                                <li class="pl-3" ><span style="font-weight: bold;">available </span><i class="fa fa-user text-black m-r5"></i> <%= job.hiresNum %> </li>
                                
                            </ul>
                            <!-- <p class="p-t20">Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum.</p> -->
                            <h5 class="font-weight-600 pt-3">Job Description</h5>
                            <div class="dez-divider divider-2px bg-gray-dark mb-4 mt-0"></div>
                            <p><%= job.description %></p>
                            <!-- <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages, and more recently with desktop publishing software like Aldus PageMaker including versions of Lorem Ipsum.</p> -->
                            <!-- <h5 class="font-weight-600">How to Apply</h5>
                            <div class="dez-divider divider-2px bg-gray-dark mb-4 mt-0"></div>
                            <p>Lorem Ipsum is simply dummy text of the printing and typesetting industry. Lorem Ipsum has been the industry's standard dummy text ever since the 1500s, when an unknown printer took a galley of type and scrambled it to make a type specimen book. It has survived not only five centuries, but also the leap into electronic typesetting, remaining essentially unchanged. It was popularised in the 1960s with the release of Letraset sheets containing Lorem Ipsum passages.</p> -->
                            <h5 class="font-weight-600">Job Requirements</h5>
                            <div class="dez-divider divider-2px bg-gray-dark mb-4 mt-0"></div>
                            <ul class="list-num-count no-round">
                                <% job.requirements.forEach(jobreq => { %>
                                    <li><%= jobreq %></li>
                                <% }) %>
                            </ul>
                            <!-- <span><h5 class="font-weight-600 pt-3"></h5><%= job.hiresNum %></span>
                            <div class="dez-divider divider-2px bg-gray-dark mb-4 mt-0"></div>
                             -->
                             <% if(usersession) { %>
                                <a href="/user/jobquestions/<%= job._id %>/<%= usersession._id %>" class="site-button">Apply This Job</a>
                            <% }else { %>
                                <a href="/user/login" class="site-button">Login to Apply</a>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Job Detail -->
        
    </div>
</div>

<div class="container">

     
      <!-- Modal -->
      <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header" style="background-color: #2e55fa; align-items: center;">
                <img src="/images/brandLogo/<%= employer._id %>.png" style="width: 10rem;" alt="">
                <br>
              <h4 class="modal-title ml-5"><%= employer.username %></h4>
              <button type="button" class="close" data-dismiss="modal" aria-hidden="true">x</button>
            </div>
            <div class="modal-body">
                <table>
                    <tr>
                        <td>Email:</td>
                        <td><%= employer.email %></td>
                    </tr>
                    <tr>
                        <td>Professional Title:</td>
                        <td><%= employer.professionalTitle %></td>
                    </tr>
                    <tr>
                        <td>Location:</td>
                        <td><%= employer.location %></td>
                    </tr>
                    <tr>
                        <td>Description:</td>
                        <td><%= employer.aboutCompany %></td>
                    </tr>
                </table>
                
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
            </div>
          </div><!-- /.modal-content -->
        </div><!-- /.modal-dialog -->
      </div><!-- /.modal -->
      
      
    </div>

<%- include('../partials/userfooter.ejs') %>

<button class="scroltop fa fa-chevron-up"></button>


<script>
    setTimeout(() => {
        document.getElementById('closeAlert').click()
        
    }, 4000);
</script>

<%- include('../partials/footer.ejs') %>
