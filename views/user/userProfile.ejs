<%- include('../partials/header.ejs') %>
<%- include('../partials/usernav.ejs') %>


<div class="page-content bg-white">
    
    <!-- contact area -->

    <div class="container">
        <div class="main-body">
        
        
              <div class="row gutters-sm">
                <div class="col-md-4 mb-3">
                  <div class="card">
                    <div class="card-body">
                      <div class="d-flex flex-column align-items-center text-center">
                        <% if(usersession.profilePic == true) { %>
                          <img src="/images/userProfile/<%= usersession._id %>.jpg" alt="Admin" class="rounded-circle" width="150">
                        <% } else {%>
                          <img src="<%= usersession.pic %>" alt="Admin" class="rounded-circle" width="150">
                        <% } %>
                        <div class="mt-3">
                          <h4><%= usersession.name %></h4>
                          <p class="text-secondary mb-1" style="font-weight: bold;"><%= user.professionalTitle %></p>
                          <p class="text-muted font-size-sm"><%= user.location %></p>
                          <!-- <button class="btn btn-primary">Follow</button> -->
                          <form action="/user/profileEdit">
                            <button class="btn btn-outline-primary" type="submit">Edit Profile</button>
                          </form>
                        </div>
                      </div>
                    </div>
                  </div>

                  <div class="card mt-3">
                    <ul class="list-group list-group-flush">
                        <div class="card">
                            <div class="card-body">
                              <% if(user.resume == true) { %>
                                <h5 class="card-title">Your Resume</h5>
                              <embed src="/images/userResume/<%= usersession._id %>.pdf" type="application/pdf"/>
                                
                              <a href="/images/userResume/<%= usersession._id %>.pdf" download="newfilename.pdf" class="text-primary pr-5">Download</a>
                              <!-- <a href="#" class="text-primary pr-3">Delete</a> -->
                              <a href="/user/resumeupload" class="text-primary pr-3">Replace</a>
                              <% } else { %>
                                <h5 class="card-title">Attach Resume</h5>

                              <a href="/user/resumeupload" class="text-primary pr-3">Click here</a>
                              <% } %>
                              
                            </div>
                          </div>
                      
                    </ul>
                  </div>
                </div>
                <div class="col-md-8">
                  <div class="card mb-3">
                    <div class="card-body">
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Full Name</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                          <%= user.name %>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Email</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= user.email %>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Phone</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= user.mobile %>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Address</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= user.location %>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Key Skills</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= user.skills %>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Education</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= user.education %>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Profile Summary</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= user.profilesummary %>
                        </div>
                      </div>
                      <hr>
                      <div class="row">
                        <div class="col-sm-3">
                          <h6 class="mb-0">Experience</h6>
                        </div>
                        <div class="col-sm-9 text-secondary">
                            <%= user.experience %>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
        </div>


    
</div>
<%- include('../partials/userfooter.ejs') %>

<button class="scroltop fa fa-chevron-up"></button>

<%- include('../partials/footer.ejs') %>

